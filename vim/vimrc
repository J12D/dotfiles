set nocompatible

" Load Vundle
filetype off
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#rc()

" let Vundle manage Vundle
Plugin 'gmarik/Vundle.vim'

Bundle 'scrooloose/nerdtree'
Bundle 'altercation/vim-colors-solarized'
Bundle 'Lokaltog/vim-powerline'
Bundle 'tpope/vim-fugitive'
Bundle 'kien/ctrlp.vim'
Bundle 'ervandew/supertab'
Bundle 'scrooloose/nerdcommenter'
Bundle 'lervag/vim-latex'

" Disabled Plugins (for now)
"Bundle 'Lokaltog/vim-easymotion'
"Bundle 'spf13/vim-autoclose'
"Bundle 'toyamarinyon/vim-swift'
"Bundle 'majutsushi/tagbar'

" Color/Syntax highlighting
syntax enable
filetype plugin indent on

set encoding=utf-8

set background=dark
colorscheme solarized

" Set tab width to 4 spaces
set autoindent
set expandtab
set smarttab
set tabstop=2
set shiftwidth=2

set foldmethod=syntax
set foldlevel=99

set colorcolumn=80 "highlight col 80

set backspace=indent,eol,start " make backspace work like most other apps

" Search
set ignorecase " ignore cases
set smartcase  " unless the string contains uppercase letters
set incsearch  " search while typing

" Display line numbers
set nu

" NERDTree 
let NERDTreeIgnore = ['\.pyc']
let NERDTreeHijackNetrw=0

"" Tagbar
"let g:tagbar_sort = 0 "sort tags according to order in source

" Set Shell to bash so fugitive behaves nicely
set shell=/bin/bash

" Powerline settings
set laststatus=2
set t_Co=256
let g:Powerline_symbols='fancy'

" Move easier between Tabs
map  <C-l> :tabn<CR>
map  <C-h> :tabp<CR>

" Leader maps
let mapleader = ','

nmap <leader><Space> :NERDTreeToggle<CR>

"nmap <leader>l :TagbarToggle<CR>

nmap <leader>gs :Gstatus<CR>
nmap <leader>gc :Gcommit<CR>
nmap <leader>gd :Gdiff<CR>

"" vim-easymotion
"let g:EasyMotion_leader_key = '<Leader>'
