" Pathogen
call pathogen#runtime_append_all_bundles()
call pathogen#helptags()

"Syntax highlighting
syntax on
filetype plugin indent on

" Set Shell to bash so fugitive behaves nicely
set shell=/bin/bash

" Powerline settings
set nocompatible
set laststatus=2
set t_Co=256
let g:Powerline_symbols='fancy'
